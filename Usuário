from faceMiLine import FaceMiLine

class Usuario:

  def __init__(self, nome, email, senha, data_nasc, profissao):
    self.nome = nome
    self.email = email
    self.senha = senha
    self.data_nasc = data_nasc
    self.profissao = profissao
    self.amigos = []

  def get_nome (self):
    return self.nome

  def set_nome (self, novo_nome):
    self.nome = novo_nome

  def get_email (self):
    return self.email

  def set_email (self, novo_email):
    self.email = novo_email

  def set_senha (self, nova_senha):
    self.senha = nova_senha

  def get_profissao (self):
    return self.profissao

  def set_profissao (self,nova_profissao):
    self.profissao = nova_profissao

  def get_amigos (self):
    return self.amigos

  def adicionar_amigo (self, novo_amigo):
    novo_amigo = input("Email procurado: ")
    for usuario in self.email.self.contas:
      if usuario == novo_amigo:
        self.amigos.append(usuario)
        return self.amigos
      else:
        print("NÃ£o encontrado!")

  def desfazer_amizade (self):
    amigo = input ("Amigo: ")
    amigo = self.email.usuario (self.amigos)
    self.amigos.remove (amigo)
    return self.amigos

