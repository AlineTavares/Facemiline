class FaceMiLine:

  def __init__(self):
    self.contas = []
      
  def menu(self) :
    opcao = -1
    while opcao != 0:
      print("Menu:")
      print ('1 - Cadastrar conta')
      print ('2 - Fazer Login')
      print ('3 - Resgatar Senha')
      print ('0 - Sair')
          
      opcao = int(input("Digite uma opção: "))
        
      if opcao == 1:
        self.cadastrar()
            
      if opcao == 2:
        self.fazer_login()
            
      if opcao == 3:
        self.resgatar_senha()
            
      if opcao == 0:
        print ("Tchau, beijos de luz! Até a próxima ;-)")
            
      else:
        print ('Opção inválida! Por favor, tente novamente.')

    def cadastrar (self, nome, email, senha, data_nasc, profissao, pergunta_seguranca, resposta_seguranca):
      self.nome = input("Nome: ")
      self.email = input("Email: ")
      self.senha = input("Senha: ")
      self.data_nasc = input("Data denascimento: ")
      self.profissao = input("Profissao: ")
      self.pergunta_seguranca = input("Pergunta de seguranca: ")
      self.resposta_seguranca = input("Resposta de seguranca: ")
      print ("Cadastrado com sucesso!")

